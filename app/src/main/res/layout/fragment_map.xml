<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragMap">

    <ToggleButton
        android:id="@+id/westObstacleToggleBtn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:drawableTop="@drawable/ic_west_obstacle"
        android:scaleType="centerCrop"
        android:textOff="PLOT"
        android:textOn="CANCEL"
        android:textSize="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/eastObstacleToggleBtn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:drawableTop="@drawable/ic_east_obstacle"
        android:scaleType="centerCrop"
        android:textOff="PLOT"
        android:textOn="CANCEL"
        android:textSize="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toEndOf="@id/westObstacleToggleBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/northObstacleToggleBtn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:drawableTop="@drawable/ic_north_obstacle"
        android:textOff="PLOT"
        android:textOn="CANCEL"
        android:textSize="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/clearToggleBtn"
        android:layout_width="93dp"
        android:layout_height="70dp"
        android:layout_marginTop="72dp"
        android:scaleType="centerCrop"
        android:textOff="DELETE"

        android:textOn="CANCEL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toEndOf="@+id/eastObstacleToggleBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/southObstacleToggleBtn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:drawableTop="@drawable/ic_south_obstacle"
        android:scaleType="centerCrop"
        android:textOff="PLOT"
        android:textOn="CANCEL"
        android:textSize="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/northObstacleToggleBtn" />

    <ToggleButton
        android:id="@+id/setStartPointToggleBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textOff="SET STARTPOINT"
        android:textOn="CANCEL"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.707"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/setEditToggleBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textOff="EDIT"
        android:textOn="CANCEL"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.707"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/updateMapBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="UPDATE MAP"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.989"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetMapBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="96dp"
        android:text="RESET MAP"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>